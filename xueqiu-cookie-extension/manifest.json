{
  "manifest_version": 3,
  "name": "雪球Cookie抓取器",
  "version": "1.0.0",
  "description": "在雪球域名下自动抓取请求Cookie，支持一键复制",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://xueqiu.com/*",
    "*://*.xueqiu.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "雪球Cookie抓取器",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}
